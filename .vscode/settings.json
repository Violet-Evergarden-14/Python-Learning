{
  "latex-workshop.latex.tools": [
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-bibtex",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    }
  ],

  "latex-workshop.latex.recipes": [
    {
      "name": "XeLaTeX (single)",
      "tools": ["xelatex"]
    },
    {
      "name": "latexmk (XeLaTeX + Bib)",
      "tools": ["latexmk"]
    }
  ],

  "latex-workshop.latex.defaultRecipe": "XeLaTeX (single)",

  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.autoBuild.run": "onSave"
}
